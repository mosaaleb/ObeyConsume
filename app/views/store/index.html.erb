<% if notice %> 
  <aside id="notice"><%= notice %></aside> 
<% end %> 

<h1>Electronics</h1>
<ul class="catalog"> 
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li> 
          <%= image_tag(product.image_url, size: '190x190', crop: :fill) %> 
          <div class="product-info">
            <h2>
              <%= product.title %>
            </h2>
            <p>
              <%= sanitize(product.description) %>
            </p>
            <div class="price"> 
              <h3><%= number_to_currency product.price %></h3>
              <%= button_to line_items_path(product), class: 'button' do %>
                Add to Cart
              <% end %>
            </div>
          </div>
        </li> 
      <% end %>
    <% end %>
  <% end %>
</ul>
